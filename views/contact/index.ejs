<div class="container">
  <%- include("../partials/message") %>
</div>
<section class="co-section">
  <div class="relative-fp">
    <div class="container-fluid">
      <div class="row justify-content-between">
        <div class="col-lg-5">
          <div class="contact-info">
            <div class="container">
              <div class="row">
                <div class="col-lg-12">
                  <div class="contact-info_wrap">
                    <div class="contact-info_desc">
                      Write me an
                      <span class="js-hover">
                        <a href="mailto:thanksdearofficial@gmail.com"
                          >email | thanksdearofficial@gmail.com</a
                        > </span
                      ><br />
                    </div>
                    Or just use the contact Form
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-7">
          <div class="contact-form">
            <div class="container">
              <div class="row">
                <div class="col-lg-12">
                  <div class="contact-form_wrap">
                    <form action="/contact" method="post">
                      <div class="row">
                        <div class="col-lg-6">
                          <div class="contact-form_name">
                            <label for="name">Name</label>
                            <input
                              type="text"
                              name="name"
                              id="name"
                              value="<% name %>"
                            />
                          </div>
                        </div>
                        <div class="col-lg-6">
                          <div class="contact-form_email">
                            <label for="email">Email</label>
                            <input
                              type="email"
                              name="email"
                              id="email"
                              value="<% email %>"
                            />
                          </div>
                        </div>
                        <!-- <div class="col-lg-12"> -->
                          <div class="contact-form_message">
                            <label for="message">Message</label>
                            <textarea
                              name="message"
                              id="message"
                              placeholder="Message"
                            >
                            <% message %></textarea
                            >
                          </div>
                        <!-- </div> -->
                        <button type="Submit" class="contact-form_button">
                          Submit
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("./footer") %>
